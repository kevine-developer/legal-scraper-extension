{
  "manifest_version": 3,
  "name": "Legal Documents Scraper",
  "version": "1.0",
  "description": "Extraire automatiquement les CGU, mentions légales et politique de confidentialité d'un site web",
"permissions": [
  "activeTab",
  "storage",
  "scripting",
  "contextMenus",
  "notifications",
  "alarms"
],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Legal Documents Scraper"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}